<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
	default-lazy-init="true">
	
    <bean id="htmlCreateTaskBean" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="DataSyncService" />
		</property>
		<property name="targetMethod" value="doRun" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="htmlCreateTaskCron" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="htmlCreateTaskBean" />
		</property>
		<property name="cronExpression">
			<value>${HtmlCreateTaskCron}</value>
		</property>
	</bean>
	
	<bean id="htmlCreateTaskScheduler" lazy-init="false" autowire="no"  class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="htmlCreateTaskCron" />
			</list>
		</property>
		<property name="quartzProperties">
			<props>
				<prop key="org.quartz.threadPool.threadCount">5</prop>
			</props>
		</property>
		<property name="autoStartup" value="${HtmlCreateTaskIsOpen}" />
		<property name="startupDelay" value="${HtmlCreateTaskStartupDelay}" />
	</bean>
	 
</beans>

